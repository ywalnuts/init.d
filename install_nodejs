echo "------------------------------------------------------------------------"
echo "----------------------------开始安装nodejs 0.11.8------------------------"
curl -O http://nodejs.org/dist/v0.11.8/node-v0.11.8.tar.gz
tar zxf node-v0.11.8.tar.gz
cd node-v0.11.8
./configure
make && sudo make install
rm ../node-v0.11.8.tar.gz
rm -R ../node-v0.11.8
echo "----------------------------nodejs 0.11.8安装完成------------------------"
echo "------------------------------------------------------------------------"
