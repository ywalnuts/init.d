echo '------------------------------------------------------------'
echo '--------------------开始安装redis---------------------------'
cd ~/tmp
curl -O https://redis.googlecode.com/files/redis-2.6.14.tar.gz
tar xzf redis-2.6.14.tar.gz
cd redis-2.6.14
make
cp src/redis-server src/redis-cli /usr/bin
echo '--------------------完成安装redis---------------------------'
echo '--------------------环境搭建完成----------------------------'
echo '------------------------------------------------------------'
