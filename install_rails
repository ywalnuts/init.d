echo '------------------------------------------------------------'
echo '---------------------开始搭建Ruby环境-----------------------'
rvm pkg install readline
rvm install 2.0.0 --with-readline-dir=$rvm_path/usr
rvm 2.0.0 --default
echo '---------------------完成搭建Ruby环境-----------------------'
echo '------------------------------------------------------------'
echo '-------------------开始搭建Rails环境------------------------'
gem install bundler rails
echo '-------------------完成搭建Rails环境------------------------'
echo '------------------------------------------------------------'
echo '--------------------开始安装mysql---------------------------'
sudo apt-get install mysql-server libmysqlclient-dev libmysql-ruby
echo '--------------------完成安装mysql---------------------------'
echo '--------------------环境搭建完成----------------------------'
echo '------------------------------------------------------------'
